{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "files": {
        "ignore": ["./**/node_modules/*", "./**/dist/*", "./**/build/*", "./**/public/*"],
        "include": ["./*"]
    },
    "linter": {
        "enabled": true,
        "ignore": ["./**/*.css"],
        "rules": {
            "style": {
                "noParameterAssign": "off"
            }
        }
    },
    "formatter": {
        "lineWidth": 140,
        "indentWidth": 4,
        "indentStyle": "space"
    },
    "organizeImports": {
        "enabled": true
    }
}
